<% layout("/layouts/boilerplate.ejs") -%>
<body>
<div class="row mt-3 mb-3">
    <div class="col-8 offset-2">
        <h3>Edit Listing</h3>
        <form method="post" action="/listings/<%= listing._id %>?_method=put" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-lable">Title</label>
                <input class="form-control" name="listing[title]" type="text" value="<%= listing.title %>" required>
                <div class="invalid-feedback">
                    Title should be valid!
                </div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-lable">Description</label>
                <textarea class="form-control" name="listing[description]" type="text" required><%= listing.description %></textarea>
                <div class="invalid-feedback">
                    Description should be valid!
                </div>
            </div>
            <div class="mt-3 mb-3">
                Original Image <br />
                <img src="<%= listing.image.url %>"  height="200" alt="listing_image">
            </div>
            <div class="mb-3">
                <label for="image" class="form-lable">Upload new Image</label>
                <input class="form-control" name="listing[image]" type="file">
            </div>
            
            <div class="mb-3">
                <label for="price" class="form-lable">Price</label>
                <input class="form-control" name="listing[price]" type="number"  value="<%= listing.price %>" required>
                <div class="invalid-feedback">
                    Price should be valid!
                </div>
            </div>
            
            <div class="mb-3">
                <label for="country" class="form-lable">Country</label>
                <input class="form-control" name="listing[country]" type="text" value="<%= listing.country %>" required>
                <div class="invalid-feedback">
                    Country should be valid!
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-lable">Location</label>
                <input class="form-control" name="listing[location]" type="text" value="<%= listing.location %>" required>
                <div class="invalid-feedback">
                    Location should be valid!
                </div>
            </div>
            
            <button class="btn btn-primary mt-3" type="submit">Submit</button>
        </form>
    </div>
</div>
</body>