<% layout("/layouts/boilerplate.ejs") -%>
<div class="row mt-3 mb-3">
    <div class="col-8 offset-3">
        <div>
            <h4><%= listing.title %></h4>
            <div class="card listing-card" style="width: 25rem;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">Owned by: <i><b><%= listing.owner.username %></b></i></p>
                    <p class="card-text"><b><%= listing.description %></b></p>
                    <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                    <p class="card-text"><%= listing.location %></p>
                    <p class="card-text"><%= listing.country %></p>
                </div>
            </div>
            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <div class="show-btn">
                    <form method="get" action="/listings/<%= listing._id %>/edit">
                        <button class="btn btn-info">Edit</button>
                    </form>
                    <br />
                    <form method="post" action="/listings/<%= listing._id %>?_method=delete">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
        <hr />
        <% if(currUser){ %>
            <div>
                <form method="post" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>
                    <div class="mb-3 mt-3">
                        <br />   
                        <label for="rating" class="form-label">Rating</label>        
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <br />
                        <textarea type="text" class="form-control" name="comment" rows="3" cols="35" placeholder="Leave your comment here..." required></textarea>
                        <div class="invalid-feedback">
                            Enter a valid comment
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">Submit</button>
                </form>
            </div>
            <hr />
        <% } %>
        <div>
            <% if(listing.reviews.length > 0){ %>
                <p><b>All Reviews</b></p>
            <%}%>
            <div class="row">
                <% for(review of listing.reviews){ %>
                    <div class="card col-5 ms-3 mb-3 p-3">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="starability-result" data-rating = "<%= review.rating %>"></p>
                        </div>
                        <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete">
                            <button class="btn btn-danger btn-sm mt-3">Delete</button>
                        </form>
                    </div>
                <%}%>
            </div>
        </div>
        <div class="col-6 mb-3">
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>
    </div>
</div>
<script>
    const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
</script>

<script src="/js/map.js"></script>